{
  "name": "snapsteam",
  "version": "1.0.0",
  "description": "A Steam-like screenshot manager",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "node scripts/build-main.js",
    "build:renderer": "webpack --config webpack.config.js",
    "watch": "webpack --config webpack.config.js --watch",
    "dev": "npm run build && npm run start",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac --publish=never",
    "package:mac:intel": "npm run build && electron-builder --mac --x64 --publish=never",
    "package:mac:universal": "npm run build && electron-builder --mac --universal --publish=never",
    "package:win": "npm run build && electron-builder --win --publish=never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.14",
    "@mui/material": "^5.15.14",
    "axios": "^1.8.4",
    "electron-store": "^8.1.0",
    "jimp": "^0.22.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.67",
    "@types/react-dom": "^18.2.22",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.10.0",
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
