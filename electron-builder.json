{
  "appId": "com.ihainan.snapsteam",
  "productName": "SnapSteam",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "icons/mac-icon.icns",
    "icons/win_icon.png"
  ],
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.utilities",
    "icon": "icons/mac-icon.icns",
    "compression": "maximum",
    "darkModeSupport": true
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "icons/win_icon.png"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "asar": true,
  "compression": "maximum"
} 